
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define model for Users
model User {
  id             String       @id @default(uuid())
  username       String       @unique
  email          String       @unique
  fullname       String
  courseHistory   Course[]     @relation(name: "userCourseHistory")
  password       String
  refreshToken   String?
  role           Role         @default(USER)
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

// Define enum for User roles
enum Role {
  USER 
  ADMIN  
}

// Define model for Instructors
model Instructor {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  courses   Course[]

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

// Define model for Courses
model Course {
  id            String        @id @default(uuid())
  name          String
  maxSeats      Int
  startDate     DateTime
  instructor    Instructor @relation(fields: [instructorId], references: [id])
  instructorId  String
  learners      Lead[]     @relation(name: "CourseLead")
  users         User[]        @relation(name: "userCourseHistory")

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

// Define enum for Lead status
enum LeadStatus {
  ACCEPT
  REJECT
  WAITLIST
}

// Define model for Leads (Learners)
model Lead {
  id             String       @id @default(uuid())
  name           String
  email          String       @unique
  phoneNumber    String
  linkedInProfile String
  status         LeadStatus  @default(WAITLIST)
  courses        Course[]  @relation(name: "CourseLead")
  comments       Comment[]

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

// Define model for Comments
model Comment {
  id       String    @id @default(uuid())
  content  String
  lead     Lead   @relation(fields: [leadId], references: [id])
  leadId   String

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}